lane :CI do

	begin
		scan(
			workspace: "SalesforceMobileSDK.xcworkspace",
			scheme: "UnitTests",
	    	device: "iPhone 6",
			xcargs: "analyze",
			output_directory: "test_outputâ€,
	  		clean: true
	   	)
	rescue => ex
		UI.error(ex)
	end
 
	begin
		xcov(
			workspace: "SalesforceMobileSDK.xcworkspace",
	  		scheme: "UnitTests",
	  		output_directory: "xcov_output"
	  	)
	rescue => ex
	  	UI.error(ex)
	end

	begin
	   	danger(
	  		danger_id: "CI-result",
	  		dangerfile: "DangerFile",
	  		github_api_token: ENV["DANGER_GITHUB_API_TOKEN"],
	  		verbose: true
	  	)
	rescue => ex
	   	UI.error(ex)
	end

end
